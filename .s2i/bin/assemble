#!/bin/bash
set -eo pipefail

echo "Using custom assemble script"

# run default s2i actions first
# This script uses exit 0; how to override?
/usr/local/s2i/assemble

echo "Default assemble completed"

# Copy the data model
echo "Custom assemble to copy /tmp/src/data-model/target/data-model-1.0.jar to $JBOSS_HOME/standalone/lib/ext ..."
cp /tmp/src/data-model/target/data-model-1.0.jar $JBOSS_HOME/standalone/lib/ext

# Original assemble defines $DEPLOY_DIR
# Copy the flight service
echo "Custom assemble to copy /tmp/src/flight-service/target/flight-service-1.0.war to $DEPLOY_DIR ..."
cp /tmp/src/flight-service/target/flight-service-1.0.war $DEPLOY_DIR

# Copy the hotel service
echo "Custom assemble to copy /tmp/src/hotel-service/target/hotel-service-1.0.war to $DEPLOY_DIR ..."
cp /tmp/src/hotel-service/target/hotel-service-1.0.war $DEPLOY_DIR

exit 0